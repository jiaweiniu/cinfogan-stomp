cmake_minimum_required(VERSION 2.8)

ADD_DEFINITIONS(
  -Wall
  -g
  -O2
  -std=c++11
  -shared
)

project(2d_experiment)

find_package(OMPL REQUIRED)


include_directories(
  include
  ${OMPL_INCLUDE_DIRS}
  )


link_directories(${OMPL_LIBRARY_DIRS})
add_definitions(${OMPL_DEFINITIONS})

FIND_PACKAGE(Boost COMPONENTS system REQUIRED)

add_executable (dataset_generator dataset_generator.cpp)
target_link_libraries (dataset_generator  ${Boost_LIBRARIES}  ${OMPL_LIBRARIES})

add_executable (hedge_2d hedge_2d.cpp)
target_link_libraries (hedge_2d  ${Boost_LIBRARIES}  ${OMPL_LIBRARIES})

add_executable (random_left_right random_left_right.cpp)
target_link_libraries (random_left_right  ${Boost_LIBRARIES}  ${OMPL_LIBRARIES})

